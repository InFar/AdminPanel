@{
    Layout = null;
    ViewBag.Title = "CommodityTypeList";
}

<div class="page-title">
    <div class="title_left">
        <h3>商品管理</h3>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>商品类别</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_title list_tool_dialog_toolbar">
            <div class="actions pull-left col-md-offset-0">
                <a href="/CommodityType/AddType" class="btn btn-default btn-sm" data-target="#myModal" data-toggle="modal">
                    <i class="fa fa-plus"></i>&nbsp;&nbsp;新增
                </a>
            </div>
            <div class="actions pull-left col-md-offset-0">
                &nbsp;&nbsp;
                <a href="/CommodityType/AddType?code={sid_Iterm}" class="btn btn-default btn-sm" operatetargetid="myModal" relationid="a_edit" nodatatip="请选中信息！" edit="edit" operatetargettype="popdialog">
                    <i class="fa fa-pencil"></i>&nbsp;&nbsp;修改
                </a>
            </div>
            <div class="actions pull-left col-md-offset-0">
                &nbsp;&nbsp;&nbsp;<a href="/CommodityType/Delete?code={sid_Iterm}" class="btn btn-default btn-sm" operatetargettype="ajaxtodo" singleoperate="singleoperate" nodatatip="请选中信息！" confirmtip="确认要删除所选数据吗？">
    <i class="fa fa-trash-o"></i>&nbsp;&nbsp;删除
</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="InfoList_search" style="clear:both;">
            </div>
            <div>
                <table class="table table-striped jambo_table bulk_action" id="InfoList">
                    <thead>
                        <tr class="headings">
                            <th class="column-title" style="display:none">CODE</th>
                            <th class="column-title">商品类别名称 </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/build/js/bar.js" type="text/javascript"></script>
<script>
    var defaultColumns = [
        { "sName": "Type_Code", "bVisible": false },
         { "sName": "Type_Name" },
    ];
    var submitUrl = '/CommodityType/AjaxList';//数据获取地址
    TableManaged.init('InfoList', "InfoList_search", defaultColumns, submitUrl);//用table id,table search id,默认列 初始化table对象

</script>


